      <div class="left-menu">
        <div class="logo">
          <a href="/">
            <i class="icon-logo"></i>
          </a>
        </div>
        <div class="multi-search">
          <div class="left-side">
            <div class="categoty">
              <button type="button" class="clear-button" id="categoryToggleBtn">
                <span>사건번호</span>
                <i class="icon icon-angle-down"></i>
              </button>

              <div class="list-dropdown-popup" id="categoryPopup">
                <ul>
                  <li class="active"><button type="button">사건번호</button></li>
